<h2>List of People</h2>
<hr>

{{#each people}}
  <div>
    <h3>
      nome:
      {{name}}
    </h3>
    <p>
      id da Person:
      {{id}}
    </p>
    <a href="/person/{{id}}">
      View profile
    </a>
    {{#if (isEqual id ../currentUser._id)}}
    <a href="/person/{{id}}/edit">
      Edit profile
    </a>
    <form action="/person/{{id}}/delete" method="POST">
      <button>
        Delete
      </button>
    </form>
    {{/if}}
  </div>
  <hr />
{{/each}}