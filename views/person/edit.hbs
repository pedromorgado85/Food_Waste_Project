<h2>Edit the Person: {{person.name}}</h2>

<form action="/person/{{this.id}}/edit" method="post">

  <label for="input-name">name</label>
  <input type="text" id="input-name" name="name" value="{{person.name}}" />

  <label for="input-password">Password</label>
  <input type="password" name="password" id="input-password" value="{{person.password}}" />

  <label for="input-email">Email</label>
  <input type="email" name="email" id="input-email" value="{{person.email}}" />

  <button type="submit">Save changes</button>

</form>