<h2 class="col-12 text-center">
  Edit
</h2>
<div class="d-flex justify-content-center">
  {{#if currentUser}}

  <form action="/company/{{ company.id }}/edit" method="post" enctype="multipart/form-data" class="col-12 col-md-4">
    <label for="input-name" class="form-label"> name </label>
    <input type="text" class="form-control" id="input-name" name="name" value="{{ company.name }}" />
    <label for="input-password" class="form-label"> Password </label>
    <input type="password" class="form-control" name="password" id="input-password" value="{{ company.password }}" />
    <label for="input-email" class="form-label"> Email </label>
    <input type="email" class="form-control" name="email" id="input-email" value="{{ company.email }}" />
    <div class="form-group">
      <label for="image-input" class="form-label"> Image: </label>
      <input type="file" class="form-control" name="image" id="image-input" class="form-control-file" />
      <input type="text" name="existingImage" hidden id="" value="{{ company.image }}" />
    </div>
    <button type="submit" class="btn btn-primary">
      save
    </button>
  </form>
  {{/if}}
</div>